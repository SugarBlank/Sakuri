@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="card">
    <h4 class="card-header">Register</h4>
    <div class="card-body">
        <section>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                
                <div class="form-floating">
                    <input asp-for="Input.AccountID" class="form-control" />
                    <label asp-for="Input.AccountID" class="form-label"></label>
                    <span asp-validation-for="Input.AccountID" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <input type="submit" id="login-submit" type="submit" value="Login" class="w-100 btn btn-lg btn-primary" />
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


